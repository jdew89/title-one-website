extends templates/layout

block content
	//-section.hero.is-medium.hero-image
		div.hero-body
			//-div.container(style="padding:3rem;background-color:#00000060;margin-left:-1.5rem;margin-right:-1.5rem")
			div.container.hero-overlay
				div.columns
					div.column.has-text-centered
						h1.title.has-text-white.hero-overlay-text.is-size-2 What We Offer
	section.hero.is-primary.is-bold.is-medium
		div.hero-body
			div.container.has-text-centered
				h1.title.has-text-white.is-size-2 What We Offer
	//-pass order for first object then second
	//- 1,2 is img left,
	//- 2,1 is img right
	//-content is an object
	mixin dual_section(first,second,content)
		section.hero.is-info.is-bold
			div.columns.is-marginless
				//-div.column.is-two-fifths.title-ins-img
				img.column.is-two-fifths.is-paddingless(style="object-fit:cover;order:"+first src=content.img_url alt=content.img_alt_text width="100%")
				div.column.is-three-fifths.dual-section-padding(style="order:"+second)
					h1.title= content.title
					p= content.text
					.columns(style="padding-top:2rem")
						.column.has-text-centered
							a.button.is-primary-bordered.has-text-centered.is-large Get a Quote
